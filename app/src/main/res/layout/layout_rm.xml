<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <ImageView
            android:src="@drawable/halal"
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:id="@+id/imageView" android:layout_weight="1.5"
            tools:ignore="ContentDescription"/>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:layout_weight="1">
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/textViewNama"
                android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large" android:hint="Nama"/>
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textViewKet"
                android:hint="Jenis" android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium"/>
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/textViewKelurahan"
                android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium" tools:hint="Kelurahan"/>
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/textViewAlamat"
                android:textAppearance="@style/TextAppearance.Compat.Notification.Info"
                android:hint="Alamat"/>
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/textViewWaktu"
                android:textAppearance="@android:style/TextAppearance.DeviceDefault.Small" android:hint="Jadlwal"/>
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/textViewJarak"
                android:textAppearance="@android:style/TextAppearance.DeviceDefault.Small"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
        <Button
                android:text="MAPS"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/buttonMaps"/>
        <Button
                android:text="MENU"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/buttonMenu"/>
        <Button
                android:text="Kontak"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/buttonKontak"/>
    </LinearLayout>
</LinearLayout>
