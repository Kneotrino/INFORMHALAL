<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".infoActivity" android:orientation="vertical">

    <Button
            android:text="Buka Lokasi Google Map"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/buttonOpenMap"
            android:drawableLeft="@android:drawable/ic_dialog_map"
            android:background="@color/ic_logo_background" style="@style/TextAppearance.AppCompat.Large.Inverse"/>
    <Button
            android:text="Dapat Jalur"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/buttonJalur"
            android:drawableLeft="@android:drawable/ic_menu_directions"
            android:background="@color/ic_logo_background" style="@style/TextAppearance.AppCompat.Large.Inverse"/>
    <TextView
            android:text="Nama"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Large.Inverse"
            android:background="@color/design_default_color_primary"
    />
    <TextView
            android:text="TextNama"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/textNama"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"/>
    <TextView
            android:text="Alamat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Large.Inverse"
            android:background="@color/design_default_color_primary"
    />
    <TextView
            android:text="TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/textAlamat"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"/>
    <TextView
            android:text="Rating"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Large.Inverse"
            android:background="@color/design_default_color_primary"
    />
    <TextView
            android:text="TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/textRating"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"/>
    <TextView
            android:text="Menu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Large.Inverse"
            android:background="@color/design_default_color_primary"
            android:id="@+id/textView6"/>
    <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:id="@+id/listMenu"/>
</LinearLayout>